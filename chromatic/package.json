{
  "name": "@sl-design-system/chromatic",
  "description": "Storybook setup specifically for chromatic",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sl-design-system/components.git",
    "directory": "chromatic"
  },
  "type": "module",
  "scripts": {
    "chromatic": "wireit",
    "storybook": "wireit",
    "start": "wireit"
  },
  "wireit": {
    "chromatic": {
      "command": "chromatic --build-script-name storybook -o storybook-static --exit-zero-on-changes"
    },
    "storybook": {
      "command": "storybook build",
      "dependencies": [
        "..:build:components",
        "..:build:themes"
      ]
    },
    "start": {
      "command": "storybook dev -p 6006 --no-open --quiet",
      "service": {
        "readyWhen": {
          "lineMatches": "Storybook \\S+ for .*web-components-vite.* started"
        }
      },
      "files": [
        ".storybook/main.ts"
      ]
    }
  },
  "dependencies": {
    "tslib": "^2.5.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.0.12",
    "@storybook/addon-essentials": "^7.0.12",
    "@storybook/addon-storysource": "^7.0.12",
    "@storybook/web-components-vite": "^7.0.12",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "^8.33.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.12",
    "typescript": "~5.0.4",
    "wireit": "^0.9.5"
  }
}
