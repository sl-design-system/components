{
  "name": "@sanomalearning/slds-storybook",
  "description": "SLDS Storybook",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "docs/storybook"
  },
  "type": "module",
  "scripts": {
    "storybook": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "storybook build -o ../dist --quiet"
    },
    "storybook": {
      "command": "storybook dev -p 6006 --quiet"
    }
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.0.0-beta.21",
    "@storybook/addon-docs": "^7.0.0-beta.21",
    "@storybook/addon-essentials": "^7.0.0-beta.21",
    "@storybook/addon-links": "^7.0.0-beta.21",
    "@storybook/addon-storysource": "^7.0.0-beta.21",
    "@storybook/web-components-webpack5": "^7.0.0-beta.21",
    "lit-html": "^2.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0-beta.21",
    "wireit": "^0.9.3"
  }
}
