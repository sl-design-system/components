{
  "name": "@sanomalearning/slds-storybook",
  "description": "SLDS Storybook",
  "version": "1.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "docs/storybook"
  },
  "type": "module",
  "scripts": {
    "start": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "storybook build -o ../dist --quiet",
      "dependencies": [
        "../../packages/tokens:build",
        "../../packages/core:build"
      ]
    },
    "start": {
      "command": "storybook dev -p 6006 --quiet",
      "files": [
        "./storybook/main.ts"
      ],
      "dependencies": [
        {
          "script": "../../packages/core:start",
          "cascade": false
        },
        {
          "script": "../../packages/editor:start",
          "cascade": false
        },
        {
          "script": "../../packages/grid:start",
          "cascade": false
        },
        {
          "script": "../../packages/angular:start",
          "cascade": false
        }
      ]
    }
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.4",
    "@storybook/addon-links": "^7.0.4",
    "@storybook/addon-storysource": "^7.0.4",
    "@storybook/web-components-webpack5": "^7.0.4",
    "lit-html": "^2.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.4",
    "wireit": "^0.9.5"
  }
}
