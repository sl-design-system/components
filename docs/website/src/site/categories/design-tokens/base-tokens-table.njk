<h2>Color</h2>

<table class="ds-table"><thead>
 <tr>
   <th>Example</th>
   <th>Token title</th>
   <th>Token</th>
 </tr></thead>
 <tbody>
 {% for color in tokens.base.color.palette -%}
   {% for palette in color -%}
     {% for colorPrimary2 in palette -%}
       {% for colorVariantValue2 in colorPrimary2 -%}
         {% if colorVariantValue2.value %}
   <tr>
   <td>
     <div class="ds-tokens__color" style="background-color: {{ colorVariantValue2.value }}"></div>
     {{ colorVariantValue2.value }}
   </td>
   <td class="ds-tokens__description">{{ colorVariantValue2.description | tokenDescription }}</td>
   <td><code>{{ colorVariantValue2.description | myFilter }}</code></td>
   </tr>
        {% endif %}
       {% endfor -%}
     {% endfor -%}
   {% endfor -%}
 {% endfor -%}
 </tbody>
</table>

<h2>Text</h2>
<table class="ds-table"><thead>
  <tr>
    <th>Example text value</th>
    <th>Token title</th>
    <th>Token</th>
  </tr></thead>
  <tbody>
  {% for text in tokens.base.text -%}
    {% for textType in text -%}
      textType == 'typeset' {{ textType == 'typeset' }}
      {% for textProperties in textType -%}
        textProperties == 'typeset' {{ textProperties == 'typeset' }}
        textProperties: {{ textProperties | json }}
        {% for property in textProperties -%}
          property == 'typeset' {{ property == 'typeset' }}
          property: {{ property | json }}
          {% for propertyValue in property -%}
            propertyValue == 'typeset' {{ propertyValue == 'typeset' }}
            propertyValue: {{ propertyValue | json }}
            TODO: for typeset only
              {% for textType in propertyValue -%}
                {% if textType.value %}
            <tr>
              <td>
                <div class="ds-tokens__color" style="background-color: {{ colorVariantValue2.value }}"></div>
                {{ textType.value }}
                {{ textType.value | json }}
                {{ textType.type }}
              </td>
              <td class="ds-tokens__description">{{ textType.description | tokenDescription }}</td>
              <td><code>{{ textType.description | myFilter }}</code></td>
            </tr>
                {% endif %}
        {% endfor -%}
    {% endfor -%}
  {% endfor -%}
  {% endfor -%}
  {% endfor -%}
  {% endfor -%}
  </tbody>
</table>


<h2>Border</h2>

<table class="ds-table"><thead>
  <tr>
    <th>Example</th>
    <th>Token title</th>
    <th>Token</th>
  </tr></thead>
  <tbody>
  {% for border in tokens.base.border -%}
    {% for property in border -%}
      {% for type in property -%}
        {% for widthValue in type -%}
          {% if widthValue.value %}
          {% if widthValue.type == 'borderWidth' %}
            <tr>
              <td>
                <div class="ds-tokens__border" style="border-width: {{ widthValue.value }}px"></div>
                {{ widthValue.value }}{% if widthValue.value | hasNoUnit %}px{% endif %}
                border width
                {{ widthValue | json }}
                {{ widthValue.type }}
                {{ widthValue.description }}
              </td>
              <td class="ds-tokens__description">{{ widthValue.description | tokenDescription }}</td>
              <td><code>{{ widthValue.description | myFilter }}</code></td>
            </tr>
          {% endif %}
          {% if widthValue.type == 'borderRadius' %}
            <tr>
              <td>
                <div class="ds-tokens__border" style="border-radius: {{ widthValue.value }}{% if widthValue.value | hasNoUnit %}px{% endif %}"></div>
                TODO: % instead px when needed
                {{ widthValue.value }}{% if widthValue.value | hasNoUnit %}px{% endif %}
                border radius
                {{ widthValue | json }}
                {{ widthValue.type }}
                {{ widthValue.description }}
                {{ widthValue.value | hasNoUnit }}
              </td>
              <td class="ds-tokens__description">{{ widthValue.description | tokenDescription }}</td>
              <td><code>{{ widthValue.description | myFilter }}</code></td>
            </tr>
          {% endif %}
          {% endif %}
        {% endfor -%}
      {% endfor -%}
    {% endfor -%}
  {% endfor -%}
  </tbody>
</table>


