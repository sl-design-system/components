      <td class="ds-tokens__description">{{ colorPrimary2[forloop.index].description | tokenDescription }}</td>
      <td><code>{{ colorPrimary2[forloop.index].description | myFilter }}</code></td>
      </tr>{% endfor -%}{% endfor -%}
