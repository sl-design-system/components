<h2>Border</h2>

<table class="ds-table"><thead>
  <tr>
    <th>Example</th>
    <th>Token title</th>
    <th>Token</th>
  </tr></thead>
  <tbody>
  {% for border in tokens.base.border -%}
    {% for property in border -%}
      {% for type in property -%}
        {% for widthValue in type -%}
          {% if widthValue.value %}
          {% if widthValue.type == 'borderWidth' %}
            <tr>
              <td>
                <div class="ds-tokens__color" style="border-radius: {{ widthValue.value }}px"></div>
                {{ widthValue.value }}
                border width
                {{ widthValue | json }}
                {{ widthValue.type }}
                {{ widthValue.description }}
              </td>
              <td class="ds-tokens__description">{{ widthValue.description | tokenDescription }}</td>
              <td><code>{{ widthValue.description | myFilter }}</code></td>
            </tr>
          {% endif %}
          {% if widthValue.type == 'borderRadius' %}
            <tr>
              <td>
                <div class="ds-tokens__color" style="border-radius: {{ widthValue.value }}px"></div>
                {{ widthValue.value }}
                border radius
                {{ widthValue | json }}
                {{ widthValue.type }}
                {{ widthValue.description }}
              </td>
              <td class="ds-tokens__description">{{ widthValue.description | tokenDescription }}</td>
              <td><code>{{ widthValue.description | myFilter }}</code></td>
            </tr>
          {% endif %}
          {% endif %}
        {% endfor -%}
      {% endfor -%}
    {% endfor -%}
  {% endfor -%}
  </tbody>
</table>

