{
  "name": "@sl-design-system/monorepo",
  "packageManager": "yarn@3.5.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git"
  },
  "type": "module",
  "workspaces": [
    "packages/angular",
    "packages/components/*",
    "packages/themes/*",
    "packages/tokens",
    "scripts",
    "tools/example-data",
    "website"
  ],
  "scripts": {
    "build": "wireit",
    "build:cem": "wireit",
    "build:tokens": "wireit",
    "extract-i18n": "wireit",
    "lint": "wireit",
    "postinstall": "husky install",
    "release": "wireit",
    "reset": "wireit",
    "start": "wireit",
    "storybook": "wireit",
    "test": "wireit",
    "website": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:components",
        "build:themes",
        "build:types"
      ]
    },
    "build:cem": {
      "command": "cem analyze",
      "dependencies": [
        "build:scss"
      ],
      "files": [
        "custom-elements-manifest.config.js"
      ],
      "output": [
        "custom-elements.json"
      ]
    },
    "build:components": {
      "command": "node ./scripts/build-components.js",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:locales",
        "build:scss"
      ],
      "files": [
        "packages/components/**/*.ts",
        "!packages/components/**/*.d.ts"
      ],
      "output": [
        "packages/components/**/*.js",
        "packages/components/**/*.js.map"
      ]
    },
    "build:locales": {
      "command": "node ./scripts/build-locales.js"
    },
    "build:scss": {
      "command": "node ./scripts/build-scss.js",
      "clean": "if-file-deleted",
      "files": [
        "packages/components/**/*.scss"
      ],
      "output": [
        "packages/components/**/*.scss.ts"
      ]
    },
    "build:themes": {
      "command": "node ./scripts/build-themes.js",
      "clean": "if-file-deleted",
      "files": [
        "packages/themes/**/*.ts",
        "!packages/themes/**/*.d.ts"
      ],
      "output": [
        "packages/themes/**/*.js",
        "packages/themes/**/*.js.map"
      ]
    },
    "build:tokens": {
      "command": "node ./scripts/build-tokens.js",
      "clean": "if-file-deleted",
      "files": [
        "packages/tokens/src/**/*.json"
      ],
      "output": [
        "packages/themes/**/*.{css,json,scss}",
        "!packages/themes/*/{package,tsconfig}.json"
      ]
    },
    "build:types": {
      "command": "tsc --build tsconfig.all.json --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:locales",
        "build:scss"
      ],
      "files": [
        "packages/**/*.ts"
      ],
      "output": [
        "packages/**/tsconfig.tsbuildinfo",
        "packages/**/*.d.ts"
      ]
    },
    "extract-i18n": {
      "command": "node ./scripts/extract-i18n.js"
    },
    "lint": {
      "dependencies": [
        "./packages/core:lint"
      ]
    },
    "release": {
      "command": "yarn changeset publish",
      "dependencies": [
        "build"
      ]
    },
    "reset": {
      "command": "rimraf --glob \"**/.wireit\""
    },
    "start": {
      "command": "storybook dev -p 6006 --no-open --quiet",
      "service": {
        "readyWhen": {
          "lineMatches": "Storybook \\S+ for .*web-components-vite.* started"
        }
      },
      "files": [
        ".storybook/main.ts"
      ],
      "dependencies": [
        {
          "script": "build:locales",
          "cascade": false
        },
        {
          "script": "build:scss",
          "cascade": false
        },
        {
          "script": "build:themes",
          "cascade": false
        },
        {
          "script": "build:types",
          "cascade": false
        }
      ]
    },
    "storybook": {
      "command": "yarn workspace @sl-design-system/angular-root storybook",
      "dependencies": [
        "storybook:build"
      ]
    },
    "storybook:build": {
      "command": "storybook build -o dist --quiet",
      "dependencies": [
        "build:ts"
      ]
    },
    "test": {
      "dependencies": [
        "test:components"
      ]
    },
    "test:components": {
      "command": "wtr --static-logging",
      "dependencies": [
        "build:scss"
      ],
      "files": [
        "web-test-runner.config.js",
        "packages/components/**/*.spec.ts"
      ]
    },
    "website": {
      "dependencies": [
        "./website:build:prod"
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@changesets/cli": "^2.26.1",
    "@changesets/get-github-info": "^0.5.2",
    "@custom-elements-manifest/analyzer": "^0.8.0",
    "@lit/localize-tools": "^0.6.8",
    "@open-wc/testing": "^3.1.8",
    "@storybook/addon-a11y": "^7.0.6",
    "@storybook/addon-essentials": "^7.0.6",
    "@storybook/addon-storysource": "^7.0.6",
    "@storybook/web-components-vite": "^7.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@web/dev-server-esbuild": "^0.3.6",
    "@web/test-runner": "^0.15.3",
    "@web/test-runner-commands": "^0.6.6",
    "@web/test-runner-playwright": "^0.9.0",
    "@webcomponents/scoped-custom-element-registry": "^0.0.9",
    "element-internals-polyfill": "1.2.6",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.6",
    "sass": "^1.62.0",
    "sinon": "^15.0.3",
    "storybook": "^7.0.6",
    "stylelint": "^15.5.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^3.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.2",
    "wireit": "^0.9.5"
  }
}
