{
  "name": "@sanomalearning/slds-root",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git"
  },
  "workspaces": [
    "docs/storybook",
    "docs/website",
    "packages/angular",
    "packages/core",
    "packages/editor",
    "packages/grid",
    "packages/tokens",
    "packages/tokens/src/themes/*",
    "scripts",
    "tools/changesets-changelog",
    "tools/example-data",
    "tools/storybook-addon-themes"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "docs": "wireit",
    "lint": "wireit",
    "postinstall": "husky install",
    "release": "wireit",
    "reset": "wireit",
    "test": "wireit",
    "website": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/core:build",
        "./packages/editor:build",
        "./packages/grid:build",
        "./packages/tokens:build",
        "./packages/angular:build"
      ]
    },
    "clean": {
      "command": "rimraf --glob dist docs/*/dist packages/*/dist"
    },
    "docs": {
      "dependencies": [
        "./docs/storybook:build",
        "./packages/core:docs",
        "./packages/editor:docs",
        "./packages/grid:docs",
        "./packages/angular:docs"
      ]
    },
    "lint": {
      "dependencies": [
        "./packages/core:lint"
      ]
    },
    "release": {
      "command": "yarn changeset publish",
      "dependencies": [
        "build"
      ]
    },
    "reset": {
      "command": "rimraf --glob \"**/.wireit\""
    },
    "test": {
      "dependencies": [
        "./packages/core:test"
      ]
    },
    "website": {
      "dependencies": [
        "./docs/website:build:prod"
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@changesets/cli": "^2.26.0",
    "@changesets/get-github-info": "^0.5.2",
    "@custom-elements-manifest/analyzer": "^0.6.8",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.2.0",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^3.0.0",
    "typescript": "^4.9.5",
    "wireit": "^0.9.5"
  }
}
