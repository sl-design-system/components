{
  "name": "@sl-design-system/angular",
  "description": "Angular support for the SL Design System",
  "version": "3.4.0",
  "publishConfig": {
    "directory": "dist",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sl-design-system/components.git",
    "directory": "packages/angular"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "storybook": "wireit"
  },
  "wireit": {
    "build": {
      "command": "ng build",
      "dependencies": [
        "../..:dist"
      ],
      "files": [
        "src/**/*"
      ],
      "output": [
        "dist"
      ]
    },
    "release": {
      "command": "yarn exec node sync-versions.js",
      "dependencies": [
        "build"
      ]
    },
    "start": {
      "command": "ng run angular:storybook",
      "service": {
        "readyWhen": {
          "lineMatches": "Storybook \\S+ for .*angular.* started"
        }
      },
      "files": [
        "angular.json",
        "./storybook/main.ts"
      ],
      "dependencies": [
        "../..:build"
      ]
    },
    "storybook": {
      "command": "ng run angular:build-storybook",
      "dependencies": [
        "build"
      ]
    }
  },
  "dependencies": {
    "@sl-design-system/checkbox": "^2.1.6",
    "@sl-design-system/combobox": "^0.1.5",
    "@sl-design-system/form": "^1.3.1",
    "@sl-design-system/icon": "^1.3.1",
    "@sl-design-system/locales": "^0.1.0",
    "@sl-design-system/number-field": "^0.1.5",
    "@sl-design-system/radio-group": "^1.1.5",
    "@sl-design-system/select": "^2.0.5",
    "@sl-design-system/switch": "^1.1.5",
    "@sl-design-system/text-area": "^1.1.4",
    "@sl-design-system/text-field": "^1.6.6",
    "@sl-design-system/time-field": "^0.0.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1902.14",
    "@angular-devkit/build-angular": "^19.2.14",
    "@angular-devkit/core": "^19.2.14",
    "@angular/animations": "^19.2.14",
    "@angular/cli": "^19.2.14",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@storybook/angular": "^10.0.7",
    "@types/jasmine": "~5.1.12",
    "jasmine-core": "~5.12.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.2",
    "rxjs": "~7.8.2",
    "storybook": "^10.0.7",
    "tslib": "^2.8.1",
    "typescript": "~5.5.4",
    "wireit": "^0.14.12",
    "zone.js": "~0.15.1"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
