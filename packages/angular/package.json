{
  "name": "@sl-design-system/angular-root",
  "description": "Angular module for the SL Design System",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sl-design-system/components.git",
    "directory": "packages/angular"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "start": "wireit",
    "storybook": "wireit"
  },
  "wireit": {
    "build": {
      "command": "ng build angular-core",
      "dependencies": [
        "../..:build"
      ],
      "files": [
        "projects/angular-core/**/*"
      ],
      "output": [
        "dist/angular-core"
      ]
    },
    "lint": {
      "command": "ng run angular-core:lint"
    },
    "start": {
      "command": "ng run angular-core:storybook",
      "service": {
        "readyWhen": {
          "lineMatches": "Storybook \\S+ for .*angular.* started"
        }
      },
      "files": [
        "angular.json",
        "./storybook/main.ts"
      ],
      "dependencies": [
        "../..:build"
      ]
    },
    "storybook": {
      "command": "ng run angular-core:build-storybook"
    }
  },
  "dependencies": {
    "@angular/animations": "^16.2.10",
    "@angular/common": "^16.2.10",
    "@angular/compiler": "^16.2.10",
    "@angular/core": "^16.2.10",
    "@angular/forms": "^16.2.10",
    "@angular/platform-browser": "^16.2.10",
    "@angular/platform-browser-dynamic": "^16.2.10",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.7",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "~16.2.7",
    "@angular/compiler-cli": "^16.2.10",
    "@storybook/addon-essentials": "^7.5.2",
    "@storybook/addon-links": "^7.5.2",
    "@storybook/angular": "^7.5.2",
    "@storybook/blocks": "^7.5.2",
    "@types/jasmine": "~5.1.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^16.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.2",
    "typescript": "~4.9.5",
    "wireit": "^0.14.1"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
