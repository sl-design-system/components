{
  "name": "@sanomalearning/slds-angular",
  "description": "SLDS Angular root module",
  "version": "0.0.1",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/grid"
  },
  "scripts": {
    "ng": "wireit",
    "start": "wireit",
    "build:angular-app": "wireit",
    "build:core": "wireit",
    "build": "wireit",
    "watch:angular-app": "wireit",
    "test": "wireit",
    "build:compodoc": "wireit",
    "storybook-build": "wireit",
    "storybook:core": "wireit",
    "storybook": "wireit",
    "docs": "wireit",
    "docs:json": "wireit",
    "lint": "wireit"
  },
  "wireit": {
    "ng": {
      "command": "ng"
    },
    "start": {
      "command": "ng serve"
    },
    "watch:angular-app": {
      "command": "ng build angular-app --watch --configuration development"
    },
    "build": {
      "dependencies": [
        "build:core"
      ]
    },
    "build:angular-app": {
      "command": "ng build angular-app"
    },
    "build:core": {
      "command": "ng build core",
      "dependencies": [
        "../core:build"
      ],
      "files": [
        "projects/core/**/*"
      ],
      "output": [
        "dist/core"
      ]
    },
    "build:compodoc": {
      "command": "compodoc -t -p ./tsconfig.json -e json -d .",
      "output": [
        "documentation.json"
      ]
    },
    "test": {
      "command": "ng test"
    },
    "storybook-build": {
      "command": "ng run angular-app:build-storybook"
    },
    "storybook:core": {
      "command": "ng run core:storybook",
      "dependencies": [
        "../core:build"
      ]
    },
    "storybook": {
      "command": "ng run angular-app:storybook"
    },
    "docs": {
      "command": "ng run angular-app:docs",
      "dependencies": [
        "build",
        "build:compodoc",
        "../../docs/storybook:build"
      ]
    },
    "docs:json": {
      "command": "compodoc -p ./tsconfig.json -e json -d ."
    },
    "lint": {
      "command": "ng lint"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.0",
    "@angular/common": "^15.1.0",
    "@angular/compiler": "^15.1.0",
    "@angular/core": "^15.1.0",
    "@angular/forms": "^15.1.0",
    "@angular/platform-browser": "^15.1.0",
    "@angular/platform-browser-dynamic": "^15.1.0",
    "@angular/router": "^15.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.3",
    "@angular-eslint/eslint-plugin": "^15.2.0",
    "@angular/cli": "~15.1.2",
    "@angular/compiler-cli": "^15.1.0",
    "@compodoc/compodoc": "^1.1.19",
    "@storybook/addon-essentials": "^7.0.0-beta.28",
    "@storybook/addon-interactions": "^7.0.0-beta.28",
    "@storybook/addon-links": "^7.0.0-beta.28",
    "@storybook/angular": "^7.0.0-beta.28",
    "@storybook/blocks": "^7.0.0-beta.28",
    "@storybook/testing-library": "^0.0.13",
    "@types/jasmine": "~4.3.0",
    "eslint": "^8.32.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0-beta.28",
    "typescript": "~4.9.4",
    "wireit": "^0.9.3"
  }
}
