{
  "name": "@sanomalearning/slds-angular",
  "description": "SLDS Angular root module",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/angular"
  },
  "scripts": {
    "build": "wireit",
    "docs": "wireit",
    "lint": "wireit",
    "start": "wireit"
  },
  "wireit": {
    "build": {
      "command": "ng build angular-core",
      "dependencies": [
        "../core:build"
      ],
      "files": [
        "projects/angular-core/**/*"
      ],
      "output": [
        "dist/angular-core"
      ]
    },
    "docs": {
      "command": "ng run angular-core:build-storybook",
      "dependencies": [
        "build",
        "../../docs/storybook:build"
      ]
    },
    "lint": {
      "command": "ng angular-core:lint"
    },
    "start": {
      "command": "ng run angular-core:storybook",
      "service": {
        "readyWhen": {
          "lineMatches": "Storybook \\S+ for .*angular.* started"
        }
      },
      "files": [
        "angular.json",
        "./storybook/main.ts"
      ],
      "dependencies": [
        "../core:build"
      ]
    }
  },
  "dependencies": {
    "@angular/animations": "^15.2.4",
    "@angular/common": "^15.2.4",
    "@angular/compiler": "^15.2.4",
    "@angular/core": "^15.2.4",
    "@angular/forms": "^15.2.4",
    "@angular/platform-browser": "^15.2.4",
    "@angular/platform-browser-dynamic": "^15.2.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.4",
    "@angular-eslint/eslint-plugin": "^15.2.1",
    "@angular-eslint/eslint-plugin-template": "^15.2.1",
    "@angular/cli": "~15.2.4",
    "@angular/compiler-cli": "^15.2.4",
    "@storybook/addon-essentials": "^7.0.0-rc.6",
    "@storybook/addon-links": "^7.0.0-rc.6",
    "@storybook/angular": "^7.0.0-rc.6",
    "@storybook/blocks": "^7.0.0-rc.6",
    "@types/jasmine": "~4.3.1",
    "eslint": "^8.36.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^15.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0-rc.6",
    "typescript": "~4.9.5",
    "wireit": "^0.9.5"
  }
}
