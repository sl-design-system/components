{
  "name": "@sanomalearning/slds-grid",
  "description": "SLDS Grid components",
  "version": "0.0.3",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/grid"
  },
  "type": "module",
  "exports": {
    ".": "./dist/components/index.js",
    "./register.js": "./dist/components/register.js"
  },
  "scripts": {
    "build": "wireit",
    "docs": "wireit",
    "lint": "wireit",
    "start": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:locales": {
      "command": "lit-localize build && eslint --fix \"src/locales/*.ts\"",
      "files": [
        "lit-localize.json",
        "src/locales/*.xlf"
      ],
      "output": [
        "src/locales/*.ts"
      ]
    },
    "build:scss": {
      "command": "yarn node ../../scripts/package-css.mjs ../core/src/styles/shared.scss",
      "files": [
        "../../.stylelintrc.cjs",
        "../../scripts/package-css.mjs",
        "src/**/*.scss"
      ],
      "output": [
        "src/**/*.scss.ts"
      ]
    },
    "build:ts": {
      "command": "tsc -b ./tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "../core:build",
        "build:scss"
      ],
      "files": [
        "src/**/*.ts"
      ]
    },
    "build:types": {
      "command": "tsc --noEmit --pretty",
      "files": [
        "src/**/*.ts"
      ]
    },
    "docs": {
      "command": "storybook build -o ../../docs/dist/grid --quiet",
      "dependencies": [
        "build",
        "../../docs/storybook:build"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:scss",
        "lint:ts"
      ]
    },
    "lint:scss": {
      "command": "stylelint 'src/**/*.scss' --color",
      "files": [
        "../../.stylelintrc.cjs",
        "src/**/*.scss"
      ]
    },
    "lint:ts": {
      "command": "eslint --color --ext .ts src",
      "files": [
        "../../.eslintignore",
        "../../.eslintrc.cjs",
        "../../.prettierrc.cjs",
        "src/**/*.ts"
      ]
    },
    "start": {
      "command": "storybook dev -p 6009 --no-open --quiet",
      "service": {
        "readyWhen": {
          "lineMatches": "Storybook \\S+ for .*web-components-vite.* started"
        }
      },
      "files": [
        ".storybook/main.ts"
      ],
      "dependencies": [
        {
          "script": "build:locales",
          "cascade": false
        },
        {
          "script": "build:scss",
          "cascade": false
        },
        {
          "script": "build:types",
          "cascade": false
        }
      ]
    },
    "test": {
      "command": "wtr --static-logging",
      "dependencies": [
        "build:locales",
        "build:scss"
      ],
      "files": [
        "web-test-runner.config.js",
        "src/**/*.spec.ts"
      ]
    }
  },
  "devDependencies": {
    "@open-wc/testing": "^3.1.7",
    "@sanomalearning/example-data": "*",
    "@storybook/addon-essentials": "^7.0.0-rc.6",
    "@storybook/addon-links": "^7.0.0-rc.6",
    "@storybook/addon-storysource": "^7.0.0-rc.6",
    "@storybook/web-components-webpack5": "^7.0.0-rc.6",
    "@types/sinon": "^10.0.13",
    "@web/test-runner": "^0.15.1",
    "@web/test-runner-commands": "^0.6.5",
    "@web/test-runner-playwright": "^0.9.0",
    "sinon": "^15.0.2",
    "storybook": "^7.0.0-rc.6",
    "typescript": "^4.9.5",
    "wireit": "^0.9.5"
  },
  "dependencies": {
    "@lit-labs/virtualizer": "^1.0.1",
    "@sanomalearning/slds-core": "*"
  }
}
