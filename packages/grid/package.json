{
  "name": "@sanomalearning/slds-grid",
  "description": "SLDS Grid components",
  "version": "0.0.1",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/grid"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:scss": "wireit",
    "build:ts": "wireit",
    "docs": "wireit",
    "lint": "wireit",
    "lint:scss": "wireit",
    "lint:ts": "wireit",
    "storybook": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:scss": {
      "command": "yarn node ../../scripts/package-css.mjs ../core/src/styles/shared.scss",
      "files": [
        "../../.stylelintrc.cjs",
        "../../scripts/package-css.mjs",
        "src/**/*.scss"
      ],
      "output": [
        "src/**/*.scss.ts"
      ]
    },
    "build:ts": {
      "command": "tsc -b ./tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "../core:build",
        "build:scss"
      ],
      "files": [
        "src/**/*.ts"
      ]
    },
    "docs": {
      "command": "storybook build -o ../../docs/dist/grid --quiet",
      "dependencies": [
        "build",
        "../../docs/storybook:build"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:scss",
        "lint:ts"
      ]
    },
    "lint:scss": {
      "command": "stylelint 'src/**/*.scss' --color",
      "files": [
        "../../.stylelintrc.cjs",
        "src/**/*.scss"
      ]
    },
    "lint:ts": {
      "command": "eslint --color --ext .ts src",
      "files": [
        "../../.eslintignore",
        "../../.eslintrc.cjs",
        "../../.prettierrc.cjs",
        "src/**/*.ts"
      ]
    },
    "storybook": {
      "command": "storybook dev -p 6006 --quiet"
    },
    "test": {
      "command": "wtr --static-logging",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "web-test-runner.config.mjs",
        "dist/**/*.spec.js"
      ]
    }
  },
  "devDependencies": {
    "@open-wc/testing": "^3.1.7",
    "@sanomalearning/example-data": "*",
    "@storybook/addon-a11y": "^7.0.0-beta.21",
    "@storybook/addon-docs": "^7.0.0-beta.21",
    "@storybook/addon-essentials": "^7.0.0-beta.21",
    "@storybook/addon-links": "^7.0.0-beta.21",
    "@storybook/addon-storysource": "^7.0.0-beta.21",
    "@storybook/web-components-webpack5": "^7.0.0-beta.21",
    "@types/sinon": "^10.0.13",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-commands": "^0.6.5",
    "@web/test-runner-playwright": "^0.9.0",
    "sinon": "^14.0.2",
    "storybook": "^7.0.0-beta.21",
    "typescript": "^4.9.4",
    "wireit": "^0.9.3"
  },
  "dependencies": {
    "@lit-labs/virtualizer": "^1.0.1",
    "@sanomalearning/slds-core": "*"
  }
}
