{
  "name": "@sanomalearning/slds-magister",
  "description": "SLDS Theme for Magister",
  "version": "0.0.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/tokens/src/themes/magister"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:icons": "wireit",
    "build:styles": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:lint": {
      "command": "eslint --fix \"./icons.ts\"",
      "dependencies": [
        "build:icons"
      ],
      "files": [
        "icons.ts"
      ]
    },
    "build:ts": {
      "command": "tsc -b ../../../tsconfig.build.json --force",
      "dependencies": [
        "build:lint"
      ],
      "files": [
        "icons.ts"
      ]
    },
    "build:icons": {
      "command": "yarn node --no-warnings ../../../build-icons.js magister YZeBneflpJkX3KXSyvMrqP",
      "dependencies": [
        "build:styles"
      ]
    },
    "build:styles": {
      "command": "yarn node --no-warnings ../../../build-styles.js magister",
      "files": [
        "../../figma/*.json",
        "../../figma/magister/*.json"
      ],
      "output": [
        "*.js",
        "*.json",
        "*.css",
        "*.scss",
        "!fonts.css",
        "!package.json"
      ]
    }
  }
}
