{
  "name": "@sanomalearning/slds-max",
  "description": "SLDS Theme for MAX Online",
  "version": "0.0.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/tokens/src/themes/max"
  },
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "yarn node --no-warnings ../../../build-styles.js max",
      "files": [
        "../../figma/*.json",
        "../../figma/max/*.json"
      ],
      "output": [
        "*.js",
        "*.json",
        "*.css",
        "*.scss",
        "!fonts.css",
        "!package.json"
      ]
    }
  }
}
