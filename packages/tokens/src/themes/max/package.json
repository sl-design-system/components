{
  "name": "@sanomalearning/slds-max",
  "description": "SLDS Theme for MAX Online",
  "version": "0.0.1",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/tokens/src/themes/max"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:icons": "wireit",
    "build:styles": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:ts": {
      "command": "tsc -b ../../../tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:icons"
      ],
      "files": [
        "../../../tsconfig.build.json"
      ]
    },
    "build:icons": {
      "command": "yarn node --no-warnings ../../../build-icons.js max 1oIVcD9VMbOtLXYp48ehsA",
      "dependencies": [
        "../../../../core:build",
        "build:styles"
      ],
      "files": [
        "../../../build-icons.js"
      ]
    },
    "build:styles": {
      "command": "yarn node --no-warnings ../../../build-styles.js max",
      "files": [
        "../../../build-styles.js",
        "../../figma/*.json",
        "../../figma/max/*.json"
      ]
    }
  },
  "devDependencies": {
    "typescript": "4.9.5",
    "wireit": "^0.9.5"
  }
}
