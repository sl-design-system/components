{
  "name": "@sanomalearning/slds-sanoma-learning",
  "description": "SLDS Theme for Sanoma Learning",
  "version": "0.0.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/tokens/src/themes/sanoma-learning"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:icons": "wireit",
    "build:styles": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:icons"
      ]
    },
    "build:icons": {
      "command": "yarn node --no-warnings ../../../build-icons.js sanoma-learning 1oIVcD9VMbOtLXYp48ehsA",
      "dependencies": [
        "build:styles"
      ]
    },
    "build:styles": {
      "command": "yarn node --no-warnings ../../../build-styles.js sanoma-learning",
      "files": [
        "../../figma/*.json",
        "../../figma/sanoma-learning/*.json"
      ],
      "output": [
        "*.js",
        "*.json",
        "*.css",
        "*.scss",
        "!fonts.css",
        "!index.js",
        "!package.json"
      ]
    }
  },
  "dependencies": {
    "@fortawesome/pro-regular-svg-icons": "^6.2.1",
    "@sanomalearning/slds-core": "*"
  }
}
