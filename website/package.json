{
  "name": "@sl-design-system/website",
  "description": "Website for the SL Design System",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sl-design-system/components.git",
    "directory": "docs/website"
  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "analyze": "wireit",
    "build": "wireit",
    "build:dev": "wireit",
    "clean": "wireit",
    "copy:tokens": "cpx '../packages/themes/sanoma-learning/base.json' 'src/site/_data/tokens/'",
    "lint": "wireit",
    "start": "wireit",
    "start:dev": "wireit"
  },
  "wireit": {
    "analyze": {
      "command": "cem analyze --litelement"
    },
    "build:dev": {
      "dependencies": [
        "build:dev:eleventy",
        "build:dev:styles",
        "build:dev:ts",
        "build:type-check"
      ]
    },
    "build:dev:eleventy": {
      "command": "NODE_ENV=DEV eleventy --config=site.eleventy.cjs",
      "dependencies": [
        "..:transform-tokens",
        "analyze",
        "copy:tokens",
        "build:dev:styles",
        "build:dev:ts"
      ],
      "files": [
        ".eleventy.cjs",
        "lib/site/**/*",
        "src/site/**/*"
      ]
    },
    "build:dev:styles": {
      "command": "NODE_ENV=DEV sass src/site/styles:public/site/styles",
      "files": [
        "src/site/styles"
      ],
      "output": [
        "public/site/styles"
      ]
    },
    "build:dev:ts": {
      "command": "NODE_ENV=DEV node esbuild.config.mjs",
      "dependencies": [
        "..:build"
      ],
      "files": [
        "src/site/ts/**/*",
        "tsconfig.json",
        "esbuild.config.mjs"
      ],
      "output": [
        "lib/site/**/*"
      ]
    },
    "build": {
      "dependencies": [
        "build:prod:eleventy",
        "build:prod:styles",
        "build:prod:ts"
      ]
    },
    "build:prod:eleventy": {
      "command": "NODE_ENV=PROD eleventy --config=site.eleventy.cjs",
      "dependencies": [
        "..:transform-tokens",
        "analyze",
        "copy:tokens",
        "build:prod:styles",
        "build:prod:ts"
      ],
      "files": [
        ".eleventy.cjs",
        "build/site/**/*",
        "src/site/**/*"
      ]
    },
    "build:prod:styles": {
      "command": "NODE_ENV=PROD sass src/site/styles:dist/site/styles",
      "files": [
        "src/site/styles"
      ],
      "output": [
        "dist/site/styles"
      ]
    },
    "build:prod:ts": {
      "command": "NODE_ENV=PROD node esbuild.config.mjs",
      "dependencies": [
        "..:build"
      ],
      "files": [
        "src/site/ts/**/*",
        "tsconfig.json",
        "esbuild.config.mjs"
      ],
      "output": [
        "build/**/*"
      ]
    },
    "build:type-check": {
      "command": "tsc -p tsconfig.json --pretty --incremental",
      "files": [
        "src/**/*",
        "tsconfig.json"
      ],
      "clean": "if-file-deleted",
      "output": [
        "tsconfig.tsbuildinfo"
      ]
    },
    "clean": {
      "command": "rimraf dist"
    },
    "lint": {
      "dependencies": [
        "lint:scss",
        "lint:ts"
      ]
    },
    "lint:scss": {
      "command": "stylelint 'src/**/*.scss' --color",
      "files": [
        "../.stylelintrc.cjs",
        "./stylelintrc",
        "src/**/*.scss"
      ]
    },
    "lint:ts": {
      "command": "eslint --color --ext .ts src",
      "files": [
        "../.eslintignore",
        "../.eslintrc.cjs",
        "../.prettierrc.cjs",
        ".eslintignore",
        ".prettierignore",
        "src/**/*.ts"
      ]
    },
    "start": {
      "command": "wds --watch --root-dir dist/site",
      "service": true,
      "dependencies": [
        {
          "script": "build:prod",
          "cascade": false
        }
      ]
    },
    "start:dev": {
      "command": "wds --watch --root-dir public/site --open",
      "service": true,
      "dependencies": [
        {
          "script": "build:dev",
          "cascade": false
        }
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@lit-labs/eleventy-plugin-lit": "^1.0.2",
    "@luncheon/esbuild-plugin-gzip": "^0.1.0",
    "@oddbird/popover-polyfill": "^0.2.3",
    "@types/markdown-it": "^13.0.2",
    "@web/dev-server": "^0.3.3",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "cpx": "^1.5.0",
    "esbuild": "^0.19.5",
    "esbuild-plugin-minify-html-literals": "^1.0.5",
    "html-minifier": "^4.0.0",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "rimraf": "^5.0.5",
    "sass": "^1.69.3",
    "slugify": "^1.6.6",
    "tiny-glob": "^0.2.9",
    "typescript": "^5.2.2",
    "wireit": "^0.14.0"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^3.1.1",
    "@11ty/is-land": "^3.0.2",
    "elasticlunr": "^0.9.5",
    "lit": "^3.0.0",
    "octokit": "^3.1.1"
  }
}
